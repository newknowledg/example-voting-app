pipeline {
	
	agent any

	tools{
		maven 'Maven 3.6.3'
	}

	stages{
		
		stage(build){
			steps{
				echo "Compiling worker"

				dir('worker'){
					sh 'mvn compile'
				}
			}
		}
		stage(test){
			steps{
				echo "Testing worker"

				dir('worker'){
					sh 'mvn clean test'
				}
			}
		}
		stage(package){
			steps{
				echo "Packaging worker"

				dir('worker'){
					sh 'mvn package -DskipTests'
				}
			}
		}
	}
}
